            android:src="@drawable/photo8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/info_context9"
            android:textSize="@dimen/information_label_textSize" />

        <Button
            android:id="@+id/info_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/information_button_height"
            android:layout_marginBottom="@dimen/information_margin_top"
            android:layout_marginLeft="@dimen/information_button_margin"
            android:layout_marginRight="@dimen/information_button_margin"
            android:layout_marginTop="@dimen/information_margin_top"
            android:background="@color/colorPrimary"
            android:text="@string/write_to_author"
            android:textColor="@color/our_background1" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
