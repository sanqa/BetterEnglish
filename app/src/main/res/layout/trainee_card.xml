<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/our_background1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/our_dictionary_card_height"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        card_view:cardCornerRadius="12dp">


        <LinearLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_mode"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="@dimen/our_dictionary_big_text_size"
                    android:layout_margin="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="2">

                <ImageButton
                    android:id="@+id/card_image_button"
                    android:layout_width="@dimen/our_dictionary_image_size"
                    android:layout_height="@dimen/our_dictionary_image_size"
                    android:background="@mipmap/ic_mode1" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/card_words"
                    android:layout_width="@dimen/our_dicitonary_count_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="777"
                    android:textColor="#FFF"
                    android:textSize="@dimen/our_dictionary_count_words_text_size" />



            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>