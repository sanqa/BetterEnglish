<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_word_translate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.bionic.sasha.betterenglish.customViews.WrongNotif
            android:layout_width="100dp"
            android:id="@+id/wrong_view"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp" />

        <com.bionic.sasha.betterenglish.customViews.RightNotification
            android:layout_width="100dp"
            android:id="@+id/right_view"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:weightSum="1">


            <TextView
                android:id="@+id/current_trainee"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="1"
                android:textColor="#000000"
                android:textSize="@dimen/trainee_bid_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#000000"
                android:textSize="@dimen/trainee_bid_text_size"
                android:layout_weight="0.94" />

            <TextView
                android:id="@+id/all_trainee"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000000"
                android:textSize="@dimen/trainee_bid_text_size"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/trainee_card_margin"
            android:layout_marginRight="@dimen/trainee_card_margin"
            android:layout_marginBottom="@dimen/trainee_card_margin"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:id="@+id/trainee_card_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mode1"
                android:gravity="center">

                <TextView
                    android:id="@+id/traine_mode_word"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:text="word"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="25sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/trainee_mode_margin"
                    android:layout_weight="2"
                    android:background="@mipmap/ic_loud" />

            </LinearLayout>


        </android.support.v7.widget.CardView>



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/trainee_mode_margin"
            android:layout_weight="1"
            android:background="@color/mode1"
            android:onClick="onClick"
            android:text="1"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/trainee_mode_text_size" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/trainee_mode_margin"
            android:layout_weight="1"
            android:background="@color/mode1"
            android:onClick="onClick"
            android:text="3"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/trainee_mode_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/trainee_mode_margin"
            android:layout_weight="1"
            android:background="@color/mode1"
            android:onClick="onClick"
            android:text="2"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/trainee_mode_text_size" />

        <Button
            android:id="@+id/button_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/trainee_mode_margin"
            android:layout_weight="1"
            android:background="@color/mode1"
            android:onClick="onClick"
            android:text="4"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/trainee_mode_text_size" />

    </LinearLayout>

</LinearLayout>

